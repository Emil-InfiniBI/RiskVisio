# Production Environment Configuration for Azure App Service
# This ensures data persistence across deployments

# Database Configuration
NODE_ENV=production
PORT=8080

# Data Persistence - Azure App Service Persistent Storage
# /home/data is persistent across app restarts and deployments
DB_PATH=/home/data/data.db
BACKUP_DIR=/home/data/backups

# Security Configuration (set these in Azure App Service Configuration)
# RISKVISIO_API_KEY=your-legacy-api-key-here
# RISKVISIO_ADMIN_KEY=your-admin-key-here

# Backup Configuration
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
MAX_BACKUPS_TO_KEEP=10

# Logging
LOG_LEVEL=info
